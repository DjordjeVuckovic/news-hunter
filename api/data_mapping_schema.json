{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DataMapping Schema",
  "properties": {
    "kind": { "type": "string", "const": "DataMapping" },
    "version": { "type": "string" },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name"]
    },
    "dataset": { "type": "string" },
    "fieldMappings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "sourceType": { "type": "string" },
          "target": { "type": "string" },
          "targetType": { "type": "string" }
        },
        "required": ["source", "sourceType", "target", "targetType"]
      }
    },
    "dateFormat": { "type": "string" }
  },
  "required": ["kind", "version", "metadata", "dataset", "field_mappings", "date_format"]
}
